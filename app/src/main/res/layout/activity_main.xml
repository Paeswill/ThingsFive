<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:layout_gravity="top"
        android:src="@drawable/cover223">
    </ImageView>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="16dp">

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:id="@+id/work_s"
        android:onClick="works"
        android:background="@drawable/work5" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:id="@+id/house_s"
        android:onClick="houses"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/house2" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:id="@+id/car_s"
        android:onClick="cars"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/walk8" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="10dp"
        android:text=""
        android:id="@+id/friend_s"
        android:onClick="friends"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/friends5" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text=""
        android:id="@+id/money_s"
        android:onClick="moneys"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/money3" />


</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="‘Better life” is more about living my dream with lots of passion, lots of laughter and love, which of course brings happiness to me. Not a material thing in sight! Even though our definition of what a better life is can change over the years."
        />

    <Button
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:text="Send FeedBack"
        android:id="@+id/emailpage"
        android:onClick="sendemail"
        android:layout_gravity="center_horizontal"
        android:background="#000000"
        android:textColor="#FFF"/>
</LinearLayout>
    </ScrollView>